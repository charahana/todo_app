<div class="container">
  <h2 class="mb-3">ダッシュボード</h2>
  <p class="text-muted">ようこそ　<%= current_user.name %></p>

  <% bar_color =
    case @completion_rate
    when 0..29 then "bg-danger"
    when 30..69 then "bg-info"
    else "bg-success"
    end
  %>

  <div class="row text-center mb-5">
    <div class="col-md-3 mb-3">
      <div class="card shadow-sm p-4 h-100">
        <p class="text-muted">総タスク数</p>
        <h2 class="fw-bold"><%= @total_tasks %></h2>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="card shadow-sm p-4">
        <p class="text-muted">完了率</p>
        <h2 class="fw-bold"><%= @completion_rate %>%</h2>
        <div class="progress mt-3" style="height: 10px;">
          <div class="progress-bar <%= bar_color %>" 
            role="progressbar"
            style="width: <%= @completion_rate %>%;" 
            aria-valuenow="<%= @completion_rate %>" 
            aria-valuemin="0" 
            aria-valuemax="100">
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="card shadow-sm p-4 h-100">
        <p class="text-muted">未着手</p>
        <h2 class="fw-bold"><%= @not_started_tasks %></h2>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="card shadow-sm p-4 h-100">
        <p class="text-muted">進行中</p>
        <h2 class="fw-bold"><%= @in_progress_tasks %></h2>
      </div>
    </div>
  </div>
  <div class="card shadow-sm mb-4">
    <div class="card-body">
        <h5 class="mb-3">最近のタスク</h5>
        <% if @recent_tasks.any? %>
          <ul class="list-group list-group-flush">
            <% @recent_tasks.each do |task| %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <span><%= task.title %></span>
                <small class="text-muted"><%= task.created_at.strftime("%m/%d") %></small>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-muted">最近追加されたタスクはありません</p>
        <% end %>
      </div>
    </div>
  </div>
</div>