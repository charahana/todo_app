<h1>タスク一覧</h1>
<% @tasks.each do |task| %>
  <p>タイトル</p>
  <span>
    <%= link_to task.title, task_path(task.id) %>
  </span>
  <p>内容</p>
  <span>
    <%= link_to task.body, task_path(task.id) %>
  </span>
  <p>ステータス</p>
  <p><%= task.status %></p>
  <p>期限</p>
  <p><%= task.due_date&.strftime("%Y-%m-%d") || "未設定" %></p>
  <p>画像</p>
  <% if task.image.attached? %>
    <%= image_tag task.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>
  <span><%= task.user.name %></span>
<% end %>